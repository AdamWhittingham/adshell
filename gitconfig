[alias]
  a = add
  aa = add -A
  b = branch
  bl = blame -CCC
  c = commit
  ca = commit -a
  caa = commit -a --amend -CHEAD
  cl = clean -fd
  cleanup = "!git branch --merged | grep  -v ’\\*\\|master\\|develop’ | xargs -n 1 git branch -d"
  co = checkout
  cp = cherry-pick
  d = diff
  dc = diff --cached
  dcw = diff --word-diff --cached
  dw = diff --color-words
  ff = merge --ff-only
  go = checkout -B
  l = log --graph --pretty=format:'%<(10)%C(bold green)%h%C(reset) %><(16)%C(yellow)%ar%C(reset) %<(16)%C(blue)%an%Creset %C(auto)%d%C(reset) %s' --abbrev-commit
  ls = shortlog -sn
  m = merge
  mf = merge --no-ff
  mt = mergetool
  n = checkout `git log HEAD..master --pretty=%h |tail -1`
  patch = !git --no-pager diff --no-color
  punch = push -f
  prune-remote = !"git fetch -p && for branch in $(git branch -vv | grep ': gone]' | awk '{print $1}'); do git branch -D $branch; done"
  rb = rebase
  rc = rebase --continue
  s = status -bs
  sb = show-branch
  st = status -bs
  standup = !"git log --reverse --branches --since='$(if [[ "Mon" == "$(date +%a)" ]]; then echo "last friday"; else echo "yesterday"; fi)' --author=$(git config --get user.email) --format=format:'%C(cyan) %ad %C(yellow)%h %Creset %s %Cred%d' --date=local"
  upbase = !"main=$(git rev-parse develop &>/dev/null; if [[ $? == 0 ]]; then echo 'develop'; else echo 'master'; fi); echo "Updating and rebasing on top of $main" && git checkout $main && git pull && git checkout - && git rebase $main"
  tags = tag -l
  unstage = reset head
  vim = !vim .git/index
  wc = whatchanged -p --abbrev-commit --pretty=medium

[branch]
	autosetuprebase = always

[core]
  excludesfile = ~/.gitignore_global
	pager = less -FXRS

[color]
	ui = auto
  [diff]
    meta       = "yellow"
    frag       = "magenta bold"
    commit     = "yellow bold"
    old        = "red bold"
    new        = "green bold"
    whitespace = "red reverse"
  [diff-highlight]
    oldNormal    = "red bold"
    oldHighlight = "red bold 52"
    newNormal    = "green bold"
    newHighlight = "green bold 22"
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
[push]
	default = matching


[mergetool]
	keepBackup = false
[merge]
  keepBackup = false
  tool = diffmerge
  defaultToUpstream = true
[mergetool "diffmerge"]
	cmd = "diffmerge --nosplash --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
  insteadOf = "gist:"
[url "git@heroku.com:"]
  insteadOf = "heroku:"
