#! /bin/bash

function detect_zoom_meeting() {
  ps -ef | grep -Eq 'zoom.*\-key [0-9]+'
}

function log() {
  now=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
  echo "${now}: $1"
}

function call_webhook() {
  if [[ -ne $ZOOM_STATUS_WEBOOK_URL ]] ; then
    curl -x POST --data "{\"zoom_status\": \"$1\"}" -H "Content-Type: application/json" $ZOOM_STATUS_WEBOOK_URL
  fi
}

function report_state_change() {
  local status
  if [[ $1 == 0 ]]; then
    status="in_meeting"
  else
    status="out_of_meeting"
  fi

  log "$status"
  call_webhook "$status"
}

while true; do
  detect_zoom_meeting
  new_state=$?

  if [[ new_state -ne in_meeting ]] ; then
    report_state_change $new_state
  fi

  in_meeting=$new_state
  sleep 2
done
